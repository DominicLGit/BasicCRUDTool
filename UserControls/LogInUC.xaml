<UserControl x:Class="BasicCRUDTool.UserControls.LogInUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicCRUDTool.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400"
             Background="white">
    <Border CornerRadius="20" Margin="20" Background="Black">
        <StackPanel Margin="20,20,20,10" Background="Black">
            <TextBox Name="username" Text="Username" Foreground="White" Height="40" FontSize="25"  Margin="5" Background="Black"></TextBox>
            <TextBox Name="password" Text="Password" Foreground="White" Height="40" FontSize="25" Margin="5" Background="Black"></TextBox>
            <Border CornerRadius="20" Margin="5" Background="#FFFF7248" Width="115" HorizontalAlignment="Left">
                <Button x:Name="Submit" Content="Submit" Width="94" Height="35" HorizontalAlignment="Left" Margin="10" FontSize="25" Background="#FFFF7248" BorderThickness="0" VerticalAlignment="Center"></Button>
            </Border>
        </StackPanel>
    </Border>
</UserControl>
